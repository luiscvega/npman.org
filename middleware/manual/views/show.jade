extends ../../layouts/guest

block content
  h1= package.name
  p= package.description

  dl.dl-horizontal
    if package.author
      dt Author:
      dd= package.author

    dt Maintainer:
    dd= package.maintainer

  h3 Versions
  ul
    each version in versions
      li= version.number

  if manual
    a(href="/package/#{package.name}/edit").btn.btn-primary Edit Manual

    hr

    #manual-content
      != md(manual.content)
  else
    a.btn.btn-primary(href="/package/#{package.name}/new") Add one now
