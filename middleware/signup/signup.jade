extends ../../views/layout

block content
  if errors
    .alert.alert-warning
      ul
        each error in errors
          li= error

  .col-sm-6.col-sm-offset-3
    form(method="POST").form-horizontal
      .form-group
        label.col-sm-4.control-label Username
        .col-sm-8
          input.form-control(type="text" name="user[username]")

      .form-group
        label.col-sm-4.control-label Email address
        .col-sm-8
          input.form-control(type="email" name="user[email]")

      .form-group
        label.col-sm-4.control-label Password
        .col-sm-8
          input.form-control(type="password" name="user[password]")

      .form-group
        .col-sm-offset-4.col-sm-8
          button.btn.btn-default(type="submit") Signup
